#include <iostream>
#include <stdio.h> 	
#include <cstdlib>
#include <math.h>
using namespace std;

float stof(string s){
	float result;
	cout<<"Esta es la cadena: "<<s<<endl;
	int pos = s.find(".");
	cout<<"Posicion del punto: "<<pos<<endl;
	int size = s.size();
	cout<<"Tamanio de la cadena: "<<size<<endl;
	if(pos != string::npos){
		int intPart = atoi(s.substr(0,pos+1).c_str());
		cout<<"Parte entera: "<<intPart<<endl;
		float floatPart = atoi(s.substr(pos+1,size-pos-1).c_str()) / pow(10,size-pos-1);
		cout<<"Tamanio de la parte flotante: "<<size-pos<<endl;		
		cout<<"Parte flotante: "<<floatPart<<endl;		
		result = intPart + floatPart;		
		//return intPart + floatPart;
	}else{
		result = atoi(s.c_str());
	}
	return result;
}

int main(){
	float n = stof("3123.42212");
	printf("Numero %f\n",n);
//	cout<<stof("3123.42212")<<endl;
	return 0;
}

